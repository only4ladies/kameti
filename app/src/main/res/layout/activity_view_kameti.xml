<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ic_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/kameti_name"
        android:background="#fffeffdc"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_kamet_name"
            android:autoText="false"
            android:lines="1"
            android:singleLine="true"
            android:textSize="24dp"
            android:ellipsize="end"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#ffff9d00" />

    </LinearLayout>

    <View android:background="#ffccbf7d" android:layout_width="match_parent" android:layout_height="4px"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:id="@+id/key_admin_id"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_admin_id"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:id="@+id/key_kameti_start_date"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_kameti_start_date"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of members"
                    android:id="@+id/key_kameti_members"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_kameti_members"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:id="@+id/key_kameti_amount"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_kameti_amount"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interest rate"
                    android:id="@+id/key_kameti_interest_rate"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_kameti_interest_rate"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bid Start"
                    android:id="@+id/key_bid_start_time"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_bid_start_time"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bid End"
                    android:id="@+id/key_bid_end_time"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_bid_end_time"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum bid"
                    android:id="@+id/key_bid_amount_minimum"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_bid_amount_minimum"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lock time"
                    android:id="@+id/key_bid_timer"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_bid_timer"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luckydraw Amount"
                    android:id="@+id/key_lucky_draw_amount"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_lucky_draw_amount"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of lucky members "
                    android:id="@+id/key_lucky_members"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_lucky_members"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Runnerup share"
                    android:id="@+id/key_runnerup_percentage"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="#ff9f1346" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_runnerup_percentage"
                    android:autoText="false"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="right"
                    android:textColor="#ff9f1346" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>